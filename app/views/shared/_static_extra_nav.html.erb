  <%
     count = 0
     @latest_documents.each do |latest_document|
     count = count + 1
  %>
      <li class="cat-item cat-item-<%=count%>>" style="max-width:150px; float:left; margin-left:20px; margin-bottom:10px;">
        <%= link_to (image_tag download_path(latest_document["id"], file: 'thumbnail'), class: "img-responsive", alt: "#{latest_document['title_tesim'].first}"), generic_object_path(latest_document["id"]).gsub('.', '/'), title: latest_document['title_tesim'].first %>
