        <%= link_to truncate(latest_document['title_tesim'].first,{:length=>50}), generic_object_path(latest_document["id"]).gsub('.', '/'), title: latest_document['title_tesim'].first, class: "object_title" %>

      </li>
  <% end %>
  <div style="clear:both;"></div>

</ul>
