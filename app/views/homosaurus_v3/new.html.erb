<div class="row-padded">
  <h1>Create New Term</h1>
  <div style="width:50em;">
    <%= simple_form_for(@homosaurus, :url => homosaurus_v3_index_path, :as => :homosaurus) do |f| %>
      <%= render :partial => "form", locals: {f: f} %>
      <div>
        <%= button_tag class: 'btn btn-primary btn-lg', id: "upload_submit", name: "update_descriptions", data: { disable_with: "Please wait..." } do %>
          <i class="glyphicon glyphicon-floppy-disk"></i> Save Term
        <% end %>
      </div>
    <% end %>
  </div>
</div>