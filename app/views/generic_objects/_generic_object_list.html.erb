<li>
  <h2>
    <%= link_to document.title, generic_file_path(document) %>
    <% if document.has_file_content? %><small>[<%= link_to 'Download', download_path(document), target: '_new' %>]</small><% end %>
  </h2>
  <div class="row">
    <div class="col-sm-3">
      <%= render_thumbnail_tag document %>
    </div>
    <div class="col-sm-9">
      <%= render 'shared/attributes', work: document %>
    </div>
  </div>
</li>

