<div id="static_holder" class="container-fluid">
  <div class="row">
    <%= render partial: '/partials/section_side_nav' %>
    <div class="col-xs-9 col-sm-9 static_holder_content_container">
      <div id="static_holder_content" class="static_holder_content">
        <h2>Update Resource</h2>


        <%= simple_form_for(@page, :url => page_resource_path(:id => @page), :as => :page, multipart: true) do |f| %>

            <%= f.input :title, :required=>true, :input_html => {:value=>@page.title}  %>

            <%= f.input :url_label, :as => :string, :label=>'URL Label (like "project")', :required=>true, :input_html => {:value=>@page.url_label}  %>

            <% my_toolbar = [
                { name: 'document', items: [ 'Maximize', 'ShowBlocks','-', 'Source','-','About'] },
                { name: 'clipboard', items: [ 'Cut','Copy','Paste','PasteText','PasteFromWord','-','Undo','Redo', '-', 'Find', 'Replace', '-',  'SpellChecker', 'Scayt'] },
                '/',
                { name: 'styles', items: [ 'Styles', 'Format', 'FontSize' ] },
                { name: 'links', items: [ 'Link','Unlink','Anchor' ] },
                { name: 'insert', items: [ 'Image','Flash','Table','HorizontalRule','Smiley','SpecialChar','PageBreak','Iframe' ] },
                '/',
                { name: 'basicstyles', items: [ 'Bold','Italic','Underline','Strike','Subscript','Superscript','-','RemoveFormat' ] },
                { name: 'colors', items: [ 'TextColor', 'BGColor' ] },
                { name: 'paragraph', items: [ 'NumberedList','BulletedList','-','Outdent','Indent','-','Blockquote','CreateDiv',
                                              '-','JustifyLeft','JustifyCenter','JustifyRight','JustifyBlock','-','BidiLtr','BidiRtl' ] },


            ]; %>

            <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => my_toolbar, :height=>'500'}, :value=>@page.content}, :required=>true  %>
            <script>
              $( document ).ready(function() {
                //CKEDITOR.replace('content', {height: 1000});
              });
            </script>

            <%= f.input :link_order, :as=>:integer,:input_html => { :style=>"width:75px;", :value=>@page.link_order }, :required=>true   %>

            <%= f.input :published, as: :boolean, :label=>'Visible?', :input_html => {:value=>@page.published}  %>

            <%= f.button :submit %>

        <% end %>
      </div>

    </div>

  </div>
</div>
