<% id = document.id %>
<tr id="document_<%= id %>" class="<%= cycle("", "zebra") %>">
  <% gf = document.to_model %>
  <td>&nbsp;

  </td>
  <td>
    <div class="media">
      <%= link_to collections_public_show_path(document), class: "media-left" do %>
          <%= render_thumbnail_tag document, { class: "hidden-xs inst_collection_listing_thumbnail" }, { suppress_link: true } %>
      <% end %>
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to document.title, collections_public_show_path(document), id: "src_copy_link#{id}", class: "document-title" %>
          <a href="#" class="small" title="Click for more details"><i id="expand_<%= id %>" class="glyphicon glyphicon-chevron-right"></i></a>
        </h4>
        <p>
          <%=
            make_links_clickable(document["description_tesim"].first).html_safe
          %>
        </p>

        <%= render_collection_list(gf) %>
      </div>
    </div>
  </td>

</tr>
